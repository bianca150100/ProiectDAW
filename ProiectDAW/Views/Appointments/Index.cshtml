@using ProiectDAW.Models


@{
    ViewBag.Title = "Index";
}

<h1 style="color: #862d2d;">LISTA PROGRAMARI</h1>

<a href="/appointments/create" class="btn btn-success">Adauga PROGRAMARE</a>

<br />

<br />

<br />

@{
    var progList = ViewData["appointments"] as List<Appointment>;

    foreach (var prog in progList)
    {
    <div class="col-md-4 col-lg-4 col-xs-6 col-sm-4">

        @Html.Label("Name", "Name:")
        <p>@prog.FirstName</p>

        <br />

        @Html.Label("Email", "Email:")
        <p>@prog.Email</p>

        @Html.Label("Date", "Date:")
        <p>@prog.Data</p>


        <br />

        <a href="/appointments/delete/@prog.Id" class="btn btn-danger">Sterge</a>

    </div>

    }
}