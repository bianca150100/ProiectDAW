@model ProiectDAW.Models.Service

@{
    ViewBag.Title = "Update";
}

<h2>Editare serviciu</h2>

<br />


@using (Html.BeginForm())
{
<div class="form-horizontal">
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.Pret, new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Pret, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Pret, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    </div>

</div>
}