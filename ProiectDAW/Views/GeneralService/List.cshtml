@using ProiectDAW.Models

@{
    ViewBag.Title = "List";
}
<br />
<br />
<br />

<h1 style="color: #862d2d;">LISTA PRETURI</h1>

<style>
    body, html {
        height: 100%;
        margin: 0;
    }

    body {
 
        background-image: url('../../Images/sursa2.png');
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<br />
<br />
<br />
@{
    var sList = ViewData["generalServices"] as List<GeneralService>;
    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <th>Denumire </th>
            <th>Descriere</th>
        </tr>

        @foreach (var serv in sList)
        {
    <tr>
        <td>@serv.Name</td>
        <td>@serv.Description</td>
        <td>@serv.RecoveryPeriod</td>
    </tr>
        }
    </table>
}
