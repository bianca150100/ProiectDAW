@model ProiectDAW.Models.Medic

@{
    ViewBag.Title = "Create";
}
<style>
    .bg {
        background-image: url('../../Images/back5.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    h4 {
        color: #800040;
        font-size: 60px;
        font-family: URW Chancery L, cursive;
        padding-bottom: 10px;
    }
</style>
<br />
<br />


<body class="bg">
    <h4 style="font-size: 130%;">Adauga un medic nou la BeautyClinique-Make you smile!</h4>

    <br /><br />

    @using (Html.BeginForm())
