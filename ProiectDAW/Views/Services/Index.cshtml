@using ProiectDAW.Models


@{
    ViewBag.Title = "Index";
}
<style>
    .bg {
        background-image: url('../../Images/back5.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    h4 {
        color: #800040;
        font-size: 60px;
        font-family: URW Chancery L, cursive;
        padding-bottom: 10px;
    }
</style>

<br />

<br />

<h4 style="font-size: 130%">Detalii servicii:</h4>

<a href="/services/create" class="btn btn-success">Adauga serviciu clinica</a>

<br />

<br />

<br />

<body class="bg">
    @{
        var sList = ViewData["services"] as List<Service>;
        <table class="table table-bordered table-responsive table-hover">
            <tr>
                <th>Nume</th>
                <th>Pret</th>
                <th>Actiune_1</th>
                <th>Actiune_2</th>
            </tr>
            @foreach (var serv in sList)
            {

                <tr>
                    <td>@serv.Name</td>
                    <td>@serv.Pret</td>
                    <td> <a href="/services/update/@serv.Id" class="btn btn-warning">Editare</a> </td>
                    <td> <a href="/services/delete/@serv.Id" class="btn btn-danger">Sterge</a> </td>
                </tr>

            }
        </table>
    }
</body>